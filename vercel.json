{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.py": {
      "runtime": "python3.10"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "CORS_ORIGINS": "@cors_origins",
    "APP_NAME": "SAIL Bokaro",
    "APP_VERSION": "1.0.0",
    "DEBUG": "false",
    "SECRET_TOKEN": "@secret_token"
  }
}
