{
  "name": "sail-bokaro-optimizer",
  "version": "1.0.0",
  "description": "SAIL Bokaro Steel Plant Logistics Optimization System",
  "author": "SIH25208 Team",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dev:frontend": "cd ../frontend && npm run dev",
    "dev:electron": "NODE_ENV=development electron .",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "node scripts/build-backend.js",
    "build": "npm run build:frontend && npm run build:backend",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac --x64 --arm64",
    "dist:linux": "npm run build && electron-builder --linux AppImage deb",
    "dist:all": "npm run build && electron-builder -mwl",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.sail.bokaro.optimizer",
    "productName": "SAIL Bokaro Optimizer",
    "directories": {
      "buildResources": "resources",
      "output": "../release/installers"
    },
    "files": [
      "main.js",
      "preload.js",
      "resources/**/*",
      "../frontend/dist/**/*",
      "../backend/bundle/**/*"
    ],
    "asarUnpack": [
      "resources/**/*",
      "../backend/bundle/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SAIL Bokaro Optimizer"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150,
          "type": "file"
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libappindicator1",
        "libnotify4",
        "libxtst6",
        "libnss3"
      ]
    }
  }
}
